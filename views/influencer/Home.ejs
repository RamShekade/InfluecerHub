<% layout("/layouts/boilerplate") %>
<style>
  .analytics-section {
    margin-top: 20px;
    padding: 20px;
    border-radius: 10px;
    background-color: #f9f9f9;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  .chart-container {
    width: 80%;
    margin: 0 auto;
  }
  h2 {
    text-align: center;
    margin-bottom: 20px;
  }
</style>

  <body>

    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-lg-8">
          <!-- Dashboard Heading -->
          <div class="section_heading text-center wow fadeInUp" data-wow-delay="0.2s">
            <h3>Welcome, <span><%= username %></span></h3>
            <p>Manage your profile and view analytics to optimize your influence.</p>
            <div class="line"></div>
          </div>
        </div>
      </div>
  
      <!-- Profile Section and Analytics Section -->
      <div class="row">
        <!-- Profile Section (30-40% width) -->
        <div class="col-md-4">
          <div class="card">
            <div class="card-body text-center">
              <img src="/images/<%= profilePic %>" class="rounded-circle mb-3" alt="Profile Picture" width="150" height="150">
              <h5 class="card-title"><%= username %></h5>
              <a href="/user/profile" class="btn btn-primary action-btn">Update Profile</a>
            </div>
          </div>
        </div>
  
        <!-- Analytics Section (60-70% width) -->
        <div class="col-md-8">
          <div class="card">
            <div class="card-body text-center">
              <h5 class="card-title">Analytics</h5>
              <p>Check your social media analytics and engagement metrics.</p>
  
              <!-- Row for YouTube and Instagram Analytics -->
              <div class="row">
                <div class="col-md-6">
                  <a href="/user/auth" class="btn btn-danger action-btn btn-block">
                    <i class="fab fa-youtube"></i> YouTube Analytics
                  </a>
                </div>
                <div class="col-md-6">
                  <a href="/analytics/instagram" class="btn btn-warning action-btn btn-block">
                    <i class="fab fa-instagram"></i> Instagram Analytics
                  </a>
                </div>
              </div>
  
              <!-- Row for Facebook Analytics and Performance Stats -->
              <div class="row mt-3">
                <div class="col-md-6">
                  <a href="/analytics/facebook" class="btn btn-primary action-btn btn-block">
                    <i class="fab fa-facebook"></i> Facebook Analytics
                  </a>
                </div>
                <div class="col-md-6">
                  <a href="/performance" class="btn btn-success action-btn btn-block">
                    <i class="fas fa-chart-line"></i> Performance Stats
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  


    <!-- FontAwesome Icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  
  </body>
  