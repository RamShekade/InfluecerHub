<% layout("/layouts/boilerplate") %>


    <body>
        <h1 style="color: #333; font-size: 3rem; text-align: center; margin: 1rem 0; font-variant: small-caps;">All Freelancers Listings</h1>
       
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(let freelancer of allFreelancers){ %>
              <a href="/freelancer/<%= freelancer._id %>" class="listing-link">
                <div class="card col" style="width: 17rem;">
                  <!-- Image -->
                  <img src="<%= freelancer.image.url %>" class="card-img-top" alt="freelancer_image" style="height: 17rem; object-fit: cover;">
                  
                  <!-- Card Body -->
                  <div class="card-body">
                    <p class="card-text">
                      <b><%= freelancer.username %></b> <br>
                      <%= freelancer.role %> <br>
                      <strong>Skills:</strong>
                      <% freelancer.skills.forEach(skill => { %>
                        <span><%= skill %></span>
                      <% }); %>
                      
                    </p>
                  </div>
                </div>
              </a>
            <% } %>
        </div>
   
    

</body>
</html>